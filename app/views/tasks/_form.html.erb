<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ["to_do", "done"]%>
  </div>

  <div class="field">
    <%= form.label :importance %>
    <%= form.number_field :importance, in: 1..5 %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>

  <div class="field">
  <%= form.label :tags %>
  <% @tags.each do |tag| %>
      <%= form.label tag.name %>
      <%= form.check_box :tags, {:multiple => true}, tag.id, nil %>   
  <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>